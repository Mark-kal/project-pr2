function cookiemeldingaccept(){
    document.querySelector(".cookie-message").style.display="none"
    console.log("accepted");
   
}
 
function cookiemelding(){
    document.querySelector(".cookie-message").style.display="none"
    console.log("decline");
}

 
function lightmode(){
    document.querySelector(".body").classList.toggle("lightmode");
}
